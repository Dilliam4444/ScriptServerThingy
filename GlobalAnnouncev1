-- StarterPlayerScripts/SayThenKickOnLoad.lua
local Players = game:GetService("Players")
local TextChatService = game:GetService("TextChatService")

local player = Players.LocalPlayer
local MESSAGE = "IM HACKING REPORT ME!"
local KICK_REASON = "Sorry, the script broke... Please try again."

-- wait so chat initialises
task.wait(2)

-- try to send message (safe)
pcall(function()
    local channels = TextChatService.TextChannels
    if channels and channels:FindFirstChild("RBXGeneral") then
        channels.RBXGeneral:SendAsync(MESSAGE)
    end
end)

-- wait 10 seconds, then kick (safe)
task.wait(10)
pcall(function()
    if player and player.Parent then
        player:Kick(KICK_REASON)
    end
end)
